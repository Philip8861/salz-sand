generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  gameData  GameData[]
  actions   GameAction[]
  
  @@index([email])
  @@index([username])
  @@map("users")
}

model Server {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      String   @default("inactive") // inactive, active, maintenance
  startTime   DateTime?
  settings    Json     // Spielgeschwindigkeit, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  gameData    GameData[]
  
  @@index([status])
  @@index([startTime])
  @@map("servers")
}

model GameData {
  id        String   @id @default(cuid())
  userId    String
  serverId  String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  server    Server   @relation(fields: [serverId], references: [id], onDelete: Cascade)
  
  level     Int      @default(1)
  experience Int     @default(0)
  coins     Int      @default(100)
  salt      Int      @default(0)
  sand      Int      @default(0)
  
  lastAction DateTime @default(now())
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, serverId])
  @@index([userId])
  @@index([serverId])
  @@map("game_data")
}

model GameAction {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  actionType String
  data      Json?
  timestamp DateTime @default(now())
  
  @@index([userId, timestamp])
  @@index([actionType, timestamp])
  @@map("game_actions")
}
